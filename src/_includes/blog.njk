---
title: Blogs
layout: layout.njk
---

<div>
    <section class="page-header page-header-modern bg-color-quaternary p-relative">
        <div class="container">
            <div class="row py-5">
                <div class="col-md-8 order-2 order-md-1 align-self-center p-static">
                    <h1 class="text-color-dark font-weight-bold">{{ title }}</h1>
                </div>
                <div class="col-md-4 order-1 order-md-2 align-self-center">
                    <ul class="breadcrumb d-flex justify-content-md-end text-3-5">
                        <li>
                            <a href="" class="text-color-default text-color-hover-primary text-decoration-none">HOME</a>
                        </li>
                        <li class="active">Blog</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <div class="container pt-4 pb-5 mb-5">
        <div class="row">
            {{ content | safe }}
            <div class="blog-sidebar col-lg-4 pt-4 pt-lg-0">
                <aside class="sidebar">
                    {% if thumbnail %}
                    <div class="px-3 mb-4">
                        <h3 class="text-color-dark text-capitalize font-weight-bold text-5 m-0 mb-3">About The Blog</h3>
                        <p class="m-0">{{description}}</p>
                    </div>
                    {% endif %}
                    <div class="px-3">
                            <div class="input-group mb-3 pb-1">
                                <input
                                    class="form-control box-shadow-none text-1 border-0 bg-color-grey"
                                    placeholder="Search..."
                                    name="search-posts"
                                    id="search-posts"
                                    type="search"/>
                            </div>
                        <ul id="searchResults" class="simple-post-list m-0"></ul>
                        <div id="noResultsFound" style="display: none">
                            <p style="color: #777">No results found.</p>
                        </div>
                        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/elasticlunr/0.9.6/elasticlunr.min.js"></script>
                        <script type="text/javascript" src="/js/search.js"></script>
                    </div>
                    <div class="py-1 clearfix">
                        <hr class="my-2"/>
                    </div>
                    <div class="px-3 mt-4">
                        <h3 class="text-color-dark text-capitalize font-weight-bold text-5 m-0 mb-3">Recent Posts</h3>
                        <div class="pb-2 mb-1">
                            {% for post in collections.recentPosts %}
                                <a href="{{ post.url }}" class="text-color-default text-uppercase text-1 mb-0 d-block text-decoration-none">
                                    {{ post.date | readableDate }}
                                    <span class="opacity-3 d-inline-block px-2">|</span>
                                    {{ post.data.author }}</a>
                                <a href="{{ post.url }}" class="text-color-dark text-hover-primary font-weight-bold text-3 d-block pb-3 line-height-4">{{ post.data.title }}</a>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="py-1 clearfix">
                        <hr class="my-2"/>
                    </div>
                </aside>
            </div>
        </div>
    </div>
    <section
        class="parallax section section-text-light section-parallax bg-primary m-0"
        id="appointment"
        data-plugin-parallax
        data-plugin-options="{'speed': 1.5}"
        data-image-src="">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col">
                    <div
                        class="feature-box align-items-center border-0 float-lg-end mb-4 mb-lg-0 appear-animation"
                        data-appear-animation="fadeInRightShorterPlus"
                        data-appear-animation-delay="300">
                        <div class="feature-box-icon bg-transparent">
                            <i class="icons icon-phone text-6 text-color-light"></i>
                        </div>
                        <div class="feature-box-info line-height-2 ps-1">
                            <span class="d-block text-1 text-light font-weight-semibold text-color-default ws-nowrap">CALL US NOW</span>
                            <strong class="text-4-5">
                                <a href="tel:{{ phone }}" class="text-color-light text-decoration-none ws-nowrap">{{ phone }}</a>
                            </strong>
                        </div>
                    </div>
                    <h2
                        class="text-color-light font-weight-bold text-8 pb-4 mb-0 appear-animation"
                        data-appear-animation="fadeInUpShorter"
                        data-appear-animation-delay="200">Tax Accounting Advisory KPI</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col">
                    <div
                        class="border-top border-color-light-5 text-light pt-4 appear-animation"
                        data-appear-animation="fadeIn"
                        data-appear-animation-delay="300">
                        <form name="contact" method="POST" data-netlify="true">
                            <div class="row align-items-center">
                                <div class="col-12 mb-3 mb-lg-0 col-lg">
                                    <h2 class="text-color-light font-weight-bold text-5 mb-0">Request a Call Back</h2>
                                </div>
                                <input type="hidden" name="subject" value="New lead from %{formName} (%{submissionId})"/>
                                <div class="col-12 mb-3 mb-lg-0 col-lg">
                                    <input
                                        type="text"
                                        class="form-control text-3 h-auto py-3 line-height-1 border-0"
                                        placeholder="Description"
                                        name="description"
                                        aria-label="Description"/>
                                </div>
                                <div class="col-12 mb-3 mb-lg-0 col-lg">
                                    <input
                                        type="text"
                                        class="form-control text-3 h-auto py-3 line-height-1 border-0"
                                        placeholder="Full Name"
                                        name="full name"
                                        aria-label="Full Name"/>
                                </div>
                                <div class="col-12 mb-3 mb-lg-0 col-lg">
                                    <input
                                        type="text"
                                        class="form-control text-3 h-auto py-3 line-height-1 border-0"
                                        placeholder="Phone Number"
                                        name="phone"
                                        aria-label="Phone Number"/>
                                </div>
                                <div class="col-12 mb-3 mb-lg-0 col-lg">
                                    <div class="d-grid gap-2">
                                        <button
                                            type="submit"
                                            class="btn btn-modern btn-dark btn-arrow-effect-1 text-capitalize text-2-5 px-5 py-3 anim-hover-translate-top-5px
                                                transition-2ms">
                                            Submit
                                            <i class="fas fa-arrow-right ms-2"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>